<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarCalculate"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />



    <!--Content-->

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--Row1-->
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--Display-->
            <TextView
                android:maxLines="1"
                android:id="@+id/txtdisplay"
                android:textColor="#da1e1e"
                android:paddingRight="@dimen/padding"
                android:gravity="end"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textSize="50sp"

                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <!--Clear Button-->
            <Button
                android:id="@+id/btnc"
                android:layout_weight="1"
                android:textSize="@dimen/h1"
                android:text="C"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <!--Row2-->
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--button 7-->
            <Button
                android:id="@+id/btn7"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--button 8-->
            <Button
                android:id="@+id/btn8"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--button 9-->
            <Button
                android:id="@+id/btn9"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--button /-->
            <Button
                android:id="@+id/btndiv"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="/"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Row3-->
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Button 4-->
            <Button
                android:id="@+id/btn4"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--Button 5-->
            <Button
                android:id="@+id/btn5"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--Button 6-->
            <Button
                android:id="@+id/btn6"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--Button 4x-->
            <Button
                android:id="@+id/btnx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x"
                android:textSize="24sp"
                android:textStyle="bold" />




        </LinearLayout>

        <!--Row4-->
        <LinearLayout
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Button 1-->
            <Button
                android:id="@+id/btn1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--Button 2-->
            <Button
                android:id="@+id/btn2"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--Button 3-->
            <Button
                android:id="@+id/btn3"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--Button +-->
            <Button
                android:id="@+id/btnadd"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="+"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <!--Row5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">

            <!--Button 0-->
            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--Button =-->
            <Button
                android:id="@+id/btnplus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--Button - -->
            <Button
                android:id="@+id/btnminus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp"
                android:textStyle="bold" />




        </LinearLayout>



    </LinearLayout>


</LinearLayout>